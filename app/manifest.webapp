{
  "name": "Customizer",
  "description": "Tool for editing apps on-device",
  "customizations": [{
    "filter": ".*",
    "css": ["style/app.css"],
    "scripts": ["js/addon-concat.js"]
  }],
  "type": "certified",
  "role": "addon",
  "permissions": {
    "device-storage:sdcard": { "access": "readwrite" },
    "webapps-manage": {},
    "themeable":{},
    "settings":{ "access": "readonly" }
  },
  "package_path": "customizer.zip"
}
